{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [
      "node",
      "webpack-env"
    ],
    "paths": {
      "@openmrs/esm-framework": [
        "node_modules/@openmrs/esm-framework/dist/openmrs-esm-framework.js"
      ]
    }
  },
  "files": [
    "src/main.single-spa.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}